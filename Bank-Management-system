                                        // C++ MIINI BANK PROJECT USING CLASS & OBJECT.
#include<iostream>

using namespace std ;

// create a class name Account.
class Account 
{
	int  balance , wd ;
	long int mobnum , adhr ;
	string country , name ;
	
	public : void openAccount()
	        { 
	        cout << "\n\n\t\t\t\t\tW L C O M E___T O___I D B I___B A N K  " << endl ;
	        
	        cout << " \n\n\t\t\t\tA Fill The Following Details To Open YOUR Account " << endl ;
	        }
	        	
        	 void readDetails()
	        {
	       	  cout << "\n\n\t\t\t\t ENTER YOUR NAME : "	;
	       	  getline(cin,name);
	       	  cout << "\n\t\t\t\t ENTER YOUR MOBILE NUMBER : " ;
	       	  cin  >> mobnum ;
	       	  cout << "\n\t\t\t\t ENTER YOUR COUNTRY NAME : " ;
	       	  cin  >> country ; 
	       	  cout << "\n\t\t\t\t ENTER YOUR ADHAR NUMBER : " ;
	       	  cin  >> adhr ;
		}
	        
          	void getbalance()
	        {
	          cout << "\n\n\t\t\t .......................................................... " ;
	          cout << "\n\t\t\t\t ~ YOUR ACCOUNT IS SUCCESSFULLY OPENED" << endl;
		  cout << "\t\t\t.......................................................... " ;
		  cout << "\n\n\t\t\t\t PLEASE DEPOSITED SOME MONEY ~ " ;
	          cin  >> balance ;
			    }
			    
          	void writeDetails()
		{   
		  cout << "\n\n\t\t\t.......................................................... " ;
		  cout << "\n\t\t\t\t ~ YOUR ACCOUNT DETILS ARE ~ " << endl ;
		  cout << "\t\t\t.........................................................." ;
		  cout << "\n\t\t\t\t ACCOUNT NUMBER : " << 1024    ;
		  cout << "\n\t\t\t\t NAME           : " << name    ;
		  cout << "\n\t\t\t\t COUNTRY	: " << country ;
		  cout << "\n\t\t\t\t MOBILE NUMBER  : " << mobnum  ;
		  cout << "\n\t\t\t\t ADHAR NUMBER   : " << adhr    ;
		  cout << "\n\t\t\t\t AMOUNT PRESENET: Rs " << balance ;
		}
	 		
               void withdraw()
	       {
		  cout << "\n\n\t\t\t ************************************************************ " ;
		  cout << "\n\n\t\t\t\t ENTER AMOUNT YOU WNAT TO WIHDRAW : Rs " ;
		  cin  >> wd ;
	       }
			    
               void netAmt()
	       {
		  cout << "\n\n\t\t\t .......................................................... " << endl ;
		  cout  << "\t\t\t\tNET AMOUNT PRESENT : Rs " ;
		  cout << balance - wd << endl ;
		  cout << "\t\t\t .......................................................... " ;
	       }
};

	int main()
	{
 	// creating object name 'value'.
        Account  value ; 
 	
 	value.openAccount();
 	value.readDetails();
 	value.getbalance();
 	value.writeDetails();
 	value.withdraw();
 	value.netAmt();
}
